<script>
// SCRATCH CARD
function createScratch(){
  const area=document.getElementById('gameArea');
  area.innerHTML='';
  const card=document.createElement('div');
  card.className='scratch-card';
  card.innerHTML='Prize: $???<div class="scratch-overlay"></div>';
  area.appendChild(card);
  const overlay=card.querySelector('.scratch-overlay');
  overlay.addEventListener('mousemove',function(){
    overlay.remove(); 
    alert('üéâ You won $10!');
  });
}

// PLINKO
function createPlinko(){
  const area=document.getElementById('gameArea'); 
  area.innerHTML='';
  const board=document.createElement('div'); 
  board.className='plinko-board';
  const ball=document.createElement('div'); 
  ball.className='plinko-ball'; 
  board.appendChild(ball);
  const slots=['$5','$10','$20','$50']; 
  slots.forEach(s=>{
    let slot=document.createElement('div'); 
    slot.className='plinko-slot'; 
    slot.innerText=s; 
    board.appendChild(slot);
  });
  area.appendChild(board);
  setTimeout(()=>{
    const prize=slots[Math.floor(Math.random()*slots.length)]; 
    ball.style.top='260px'; 
    setTimeout(()=>{alert('üéØ You won '+prize+'!');},1200);
  },100);
}

// SPIN WHEEL
function createSpin(){
  const area=document.getElementById('gameArea'); 
  area.innerHTML='';
  const wheel=document.createElement('div'); 
  wheel.id='wheel'; 
  const prizes=['$5','$10','$20','$50','$100'];
  prizes.forEach((p,i)=>{
    const s=document.createElement('div'); 
    s.innerText=p; 
    s.style.transform=`rotate(${i*72}deg)`; 
    wheel.appendChild(s);
  });
  const btn=document.createElement('button'); 
  btn.innerText='Spin'; 
  btn.onclick=function(){
    let deg=360*3 + Math.floor(Math.random()*360); 
    wheel.style.transition='transform 3s ease-out'; 
    wheel.style.transform='rotate('+deg+'deg)';
    setTimeout(()=>{
      const won=prizes[Math.floor(deg%360/72)]; 
      alert('üé° You won '+won+'!');
    },3000);
  };
  area.appendChild(wheel); 
  area.appendChild(btn);
}

// PLAY GAME
function playGame(type){
  if(type==='scratch') createScratch();
  if(type==='plinko') createPlinko();
  if(type==='spin') createSpin();
}

// REQUEST CODE
function requestCode(){
  const code='FROZEN'+Math.floor(Math.random()*9000+1000);
  alert('Your code is: '+code);
}
</script>
