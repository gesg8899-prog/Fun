  <!-- SCRIPTS -->
  <script>
    // THEME toggle
    const themeToggle = document.getElementById('themeToggle');
    const rootBody = document.body;
    function applyTheme(theme){
      if(theme === 'light'){ rootBody.classList.add('light'); themeToggle.setAttribute('aria-pressed','true'); }
      else { rootBody.classList.remove('light'); themeToggle.setAttribute('aria-pressed','false'); }
    }
    const saved = localStorage.getItem('mn-theme') || 'dark';
    applyTheme(saved);
    themeToggle.addEventListener('click', ()=>{
      const now = rootBody.classList.contains('light') ? 'dark' : 'light';
      applyTheme(now);
      localStorage.setItem('mn-theme', now);
    });

    // Collapsible Mini Games
    const miniHeader = document.getElementById('miniHeader');
    const miniBody = document.getElementById('miniBody');
    const miniToggleBtn = document.getElementById('miniToggleBtn');
    let miniOpen = true;
    function setMiniState(open){
      miniOpen = !!open;
      if(miniOpen){
        miniBody.style.maxHeight = '1200px';
        miniToggleBtn.textContent = 'â–²';
        miniHeader.setAttribute('aria-expanded','true');
      } else {
        miniBody.style.maxHeight = '0';
        miniToggleBtn.textContent = 'â–¼';
        miniHeader.setAttribute('aria-expanded','false');
      }
    }
    miniHeader.addEventListener('click', ()=> setMiniState(!miniOpen));
    miniHeader.addEventListener('keydown', (e)=>{ if(e.key === 'Enter' || e.key === ' ') { e.preventDefault(); setMiniState(!miniOpen); } });

    // Modal logic
    const modalBackdrop = document.getElementById('modalBackdrop');
    const modalTitle = document.getElementById('modalTitle');
    const modalVersion = document.getElementById('modalVersion');
    const modalImg = document.getElementById('modalImg');
    const modalChangelog = document.getElementById('modalChangelog');
    const modalShort = document.getElementById('modalShort');
    const modalDownload = document.getElementById('modalDownload');
    const modalClose = document.getElementById('modalClose');
    const modalCloseBtn = document.getElementById('modalCloseBtn');

    function openModal(data){
      modalTitle.textContent = data.name || 'App';
      modalVersion.textContent = 'v' + (data.version || 'â€”');
      modalImg.src = data.img || '';
      modalImg.alt = data.name || 'app';
      modalShort.textContent = data.short || (data.name + ' â€” Official app');
      modalChangelog.textContent = data.change || '- No changelog available.';
      modalDownload.href = data.download || '#';
      modalDownload.setAttribute('download','');
      modalBackdrop.classList.add('open');
      modalBackdrop.setAttribute('aria-hidden','false');
      modalClose.focus();
    }
    function closeModal(){ modalBackdrop.classList.remove('open'); modalBackdrop.setAttribute('aria-hidden','true'); }

    // Preview & Download handlers
    document.querySelectorAll('[data-action]').forEach(btn=>{
      btn.addEventListener('click', (e)=>{
        const action = btn.getAttribute('data-action');
        const parent = btn.closest('.app-card');
        if(!parent) return;
        const data = {
          id: parent.getAttribute('data-appid'),
          name: parent.getAttribute('data-name'),
          version: parent.getAttribute('data-version'),
          change: parent.getAttribute('data-change'),
          download: parent.getAttribute('data-download'),
          img: parent.getAttribute('data-img'),
          short: parent.getAttribute('data-name') + ' â€” Trusted APK'
        };
        if(action === 'preview'){ openModal(data); }
        else if(action === 'download'){
          const url = data.download || '#';
          const a = document.createElement('a');
          a.href = url; a.target = '_blank'; a.rel = 'noopener';
          document.body.appendChild(a); a.click(); a.remove();
        }
      });
    });

    // Clickable app-tile preview
    document.querySelectorAll('.app-tile').forEach(tile=>{
      tile.addEventListener('click', ()=>{
        const data = {
          name: tile.getAttribute('data-name'),
          version: tile.getAttribute('data-version'),
          change: tile.getAttribute('data-change'),
          download: tile.getAttribute('data-download'),
          img: tile.getAttribute('data-img'),
          short: tile.getAttribute('data-name') + ' â€” Tap Download to get APK'
        };
        openModal(data);
      });
      tile.addEventListener('keydown', (ev)=>{ if(ev.key === 'Enter' || ev.key === ' ') { ev.preventDefault(); tile.click(); } });
    });

    // modal close
    modalClose.addEventListener('click', closeModal);
    modalCloseBtn.addEventListener('click', closeModal);
    modalBackdrop.addEventListener('click', (e)=>{ if(e.target === modalBackdrop) closeModal(); });
    document.addEventListener('keydown', (e)=>{ if(e.key === 'Escape' && modalBackdrop.classList.contains('open')) closeModal(); });

    // demo placeholder
    document.getElementById('demoBtn')?.addEventListener('click', ()=>{ alert('Demo ambience toggle â€” add audio source or custom demo behavior here.'); });

    // subtle animated particles (light)
    (function fx(){
      for(let i=0;i<8;i++){
        const f = document.createElement('div');
        f.style.position='fixed';
        f.style.left=(Math.random()*100)+'vw';
        f.style.top = (-10 - Math.random()*30)+'vh';
        f.style.opacity=0.4+Math.random()*0.6;
        f.style.width = (16 + Math.random()*18) + 'px';
        f.style.height = f.style.width;
        f.style.backgroundImage = "url('https://png.pngtree.com/png-vector/20220620/ourmid/pngtree-green-leaf-clipart-png-image_5110819.png')";
        f.style.backgroundSize='contain';
        f.style.backgroundRepeat='no-repeat';
        f.style.pointerEvents='none';
        f.style.transition='transform 10s linear';
        document.body.appendChild(f);
        setTimeout(()=>{ f.style.transform = 'translateY(120vh) rotate('+ (Math.random()*360) +'deg)'; }, 100 + i*200);
        setTimeout(()=>{ f.remove(); }, 12000);
      }
    })();

    // Ensure ticker continuous on small screens / if CSS can't handle: duplicate via JS
    (function tickerDup(){
      const track = document.getElementById('tickerTrack');
      if(!track) return;
      const parent = track.parentElement;
      // compute children width
      let totalWidth = 0;
      Array.from(track.children).forEach(el => { totalWidth += el.offsetWidth; });
      if(totalWidth < parent.offsetWidth){
        const clone = track.innerHTML;
        track.innerHTML += clone + clone;
      }
    })();

    // initial mini state
    setMiniState(true);

    // expose setMiniState (used earlier)
    function setMiniState(open){
      const header = document.getElementById('miniHeader');
      const body = document.getElementById('miniBody');
      const toggle = document.getElementById('miniToggleBtn');
      let miniOpen = !!open;
      if(miniOpen){
        body.style.maxHeight = '1200px';
        toggle.textContent = 'â–²';
        header.setAttribute('aria-expanded','true');
      } else {
        body.style.maxHeight = '0';
        toggle.textContent = 'â–¼';
        header.setAttribute('aria-expanded','false');
      }
    }
  </script>
</body>
